<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2686BC"
    android:id="@+id/how_background">

    <Space
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.2"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.5">

        <ImageSwitcher
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/how_ImageSwitcher"
            android:animateFirstView="false" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.3">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true">
            <View
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:background="@drawable/circle_full"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:id="@+id/circle_1" />
            <View
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:background="@drawable/circle_empty"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:id="@+id/circle_2" />
            <View
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:background="@drawable/circle_empty"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:id="@+id/circle_3" />
            <View
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:background="@drawable/circle_empty"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:id="@+id/circle_4" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>